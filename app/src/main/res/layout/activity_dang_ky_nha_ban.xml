<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangKyNhaBan.DangKyNhaBanActivity"
    android:orientation="vertical"
    android:background="#F6F4F4">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UselessParent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessLeaf"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/close_dknb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng ký để trở thành Nhà bán"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/img"
            android:layout_marginTop="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ Email"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/warning_email"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_warning_amber_24"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
        <EditText
            android:id="@+id/edt_emailnhaban"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/background_dangbai"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/warning_hovaten"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_warning_amber_24"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
        <EditText
            android:id="@+id/edt_hovatennhaban"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/background_dangbai"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quốc gia"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/warning_quocgianhaban"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_warning_amber_24"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
        <com.hbb20.CountryCodePicker
            android:id="@+id/chonquocgia_nhaban"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:ccp_textGravity="LEFT"
            app:ccp_showFullName="true"
            app:ccp_showPhoneCode="false"
            app:ccp_defaultLanguage="VIETNAMESE"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@color/white"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/warning_sodienthoai"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_warning_amber_24"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
        <EditText
            android:id="@+id/edt_sodienthoainhaban"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/background_dangbai"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:inputType="phone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ngành hàng"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/warning_chonnganhhang"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_warning_amber_24"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/select"
            app:boxStrokeColor="#00adf1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/auto_item_nganhhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColorLink="#00adf1"
                tools:ignore="LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="10dp">
            <CheckBox
                android:id="@+id/check_oke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tôi đồng ý với các điều khoản"
                android:textSize="15sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_dangkynhaban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:backgroundTint="#00adf1"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="100dp"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>